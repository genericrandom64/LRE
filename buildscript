#!/bin/bash

# ═║╒╓╔╕╖╗╘╙╚╛╜╝╞╟╠╡╢╣╤╥╦╧╨╩╪╫╬

# output folders
mkdir -p bin
mkdir -p exec

for i in $(ls -d src/*/)
do
	if [[ -e $i/build ]]
	then
		
		echo "╔════════════════════════════════"
		echo "║ Building in $i "
		echo "╚════════════════════════════════"
		
		PTH=$(pwd); cd $i
		echo $PTH
		
		./build
		cd $PTH
	fi
done

echo "▶▶▶ Build complete. (Use package script to generate more execs)"
