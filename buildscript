#!/bin/bash

# ═║╒╓╔╕╖╗╘╙╚╛╜╝╞╟╠╡╢╣╤╥╦╧╨╩╪╫╬

# output folders
mkdir -p bin
mkdir -p exec

for i in $(ls -d src/*)
do
	echo    "╔════════════════════════════════"
	echo -e "║ in $i "
	echo    "╚════════════════════════════════"
	PTH=$(pwd); cd $i
	
	if [[ -e build ]]
	then
		./build
	fi
	
	cd $PTH
done

echo "▶▶▶ Build complete. (Use package script to generate more execs)"
